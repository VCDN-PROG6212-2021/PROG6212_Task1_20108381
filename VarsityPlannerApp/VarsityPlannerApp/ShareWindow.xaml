<Window x:Class="VarsityPlannerApp.ShareWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VarsityPlannerApp"
        mc:Ignorable="d"
        Title="ShareWindow" Height="50" Width="300"
         ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" 
        Background="Azure"
       >
        
    <Grid>
        <Button x:Name="btnTxt" Content="Text File" Background="#0b0711" Foreground="Azure" HorizontalAlignment="Left" Height="25" Width="80" VerticalAlignment="Center" Click="BtnTxt_Click" Margin="10,0,0,0"/>
        <Button  x:Name="btnEmail" Content="Email"  Background="#0b0711" Foreground="Azure"  HorizontalAlignment="Center" Height="25" Width="80" VerticalAlignment="Center" Click="btnEmail_Click" />
        <Button  x:Name="btnWord" Content="Word"  Background="#0b0711" Foreground="Azure"   HorizontalAlignment="Right" Height="25" Width="80" VerticalAlignment="Center" Margin="10,0,10,0" Click="BtnWord"/>

    </Grid>
</Window>
